<h1> <%= @restaurant.name %></h1>
<h2> <%= @restaurant.address %> </h2>
<h3><%= @restaurant.phone_number %></h3>
<p><%= @restaurant.category %></p>
<ul class='list-group'>
  <% @restaurant.reviews.each do |review| %>
    <li class='list-group-item'> <%= review.content %>
    </li>
  <% end %>
</ul>

  <%= link_to 'Back to list', restaurants_path %>
  <%= link_to 'Create a review', new_restaurant_review_path(@restaurant) %>
